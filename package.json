{
  "name": "healthify-admin",
  "version": "1.0.0",
  "description": "Healthify Admin API",
  "main": "./dist/healthify-admin.js",
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "tsx watch ./src/healthify-admin.ts",
    "build": "tsc --build",
    "build:clean": "tsc --build --clean && tsc --build",
    "start": "node ./dist/healthify-admin.js",
    "typecheck": "tsc --noEmit",
    "lint": "prettier --check ./src",
    "format": "prettier --write ./src",
    "clean": "rm -rf dist"
  },
  "author": "Ashish",
  "license": "ISC",
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/koa": "^3.0.1",
    "@types/koa__cors": "^5.0.1",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/koa-compose": "^3.2.9",
    "@types/node": "^25.0.8",
    "@types/ramda": "^0.31.1",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^15.2.0",
    "dotenv": "^17.2.3",
    "http-errors": "^2.0.1",
    "jsonwebtoken": "^9.0.3",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "koa-compose": "^4.1.0",
    "mongodb": "^7.0.0",
    "ramda": "^0.32.0",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "zod": "^4.3.5"
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "none",
    "printWidth": 80,
    "tabWidth": 2,
    "semi": false,
    "useTabs": false,
    "singleQuote": false
  }
}
